<Window x:Class="EntityFramework_HomeTasks_5.UpdateKeyWordMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFramework_HomeTasks_5"
        mc:Ignorable="d"
        Title="UpdateKeyWordMenu" Height="450" Width="600" Initialized="Window_Initialized">
    <Grid>
        <Label Content="Choose KeyWordId:" HorizontalAlignment="Left" Margin="143,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.693,1.534" FontSize="16"/>
        <ComboBox x:Name="IdKeyWordComboBox" HorizontalAlignment="Left" Margin="143,57,0,0" VerticalAlignment="Top" Width="280" Height="34" FontSize="18"/>
        <Button x:Name="UpdateButton" Content="Update KeyWord" HorizontalAlignment="Left" Margin="209,296,0,0" VerticalAlignment="Top" Height="58" Width="148" FontSize="18" Click="UpdateButton_Click"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="412,364,0,0" VerticalAlignment="Top" Height="29" Width="126" FontSize="18" Click="BackButton_Click"/>
        <Label Content="KeyWord Name:" HorizontalAlignment="Left" Margin="143,112,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="143,143,0,0" TextWrapping="Wrap" Text="Enter KeyWord Name" VerticalAlignment="Top" Width="280" Height="30" FontSize="18" VerticalContentAlignment="Center" Foreground="#FF423F3F"/>
        <Label Content="KeyWord Header:" HorizontalAlignment="Left" Margin="143,199,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="HeaderTextBox" HorizontalAlignment="Left" Margin="143,230,0,0" TextWrapping="Wrap" Text="Enter KeyWord Name" VerticalAlignment="Top" Width="280" Height="30" FontSize="18" VerticalContentAlignment="Center" Foreground="#FF423F3F"/>

    </Grid>
</Window>
